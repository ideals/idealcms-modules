{% extends "site.twig" %}

{% block content %}

    <h1>{{ header }}</h1>

    {{ template.content|raw }}

    {%if parts|length > 0 %}
    {% for part in parts %}
        <a class="photoGallery" rel="prettyPhoto[img]" href="{{ part.img }}">
            <img alt="{{ part.name }}" src="{{ part.img_s }}" />
        </a>
    {% endfor %}
    {% endif %}

    {%if pages|length > 1 %}
        <div class="pagination pagination-left">
            <ul>
                {% for page in pages %}
                    {% if page.current == 1 %}
                        <li class="active"><a>{{ page.num }}</a></li>
                    {% else %}
                        <li><a href="{{ page.url }}">{{ page.num }}</a></li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    {% endif %}

{% endblock %}