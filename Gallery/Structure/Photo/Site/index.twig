{% extends "site.twig" %}

{% block content %}

    <h1>{{ header }}</h1>

    {# Сначала выводим все аддоны типа "Текст" #}
    {% for value in page %}
        {{ value.content|raw }}
    {% endfor %}

    {# Затем выводим все аддоны типа "PHP-файл" #}
    {% for value in phpfile %}
        {{ value.content|raw }}
    {% endfor %}

    {# Затем выводим все аддоны типа "Карта сайта" #}
    {% for value in sitemap %}
        {{ value.content|raw }}
    {% endfor %}

    {%if parts|length > 0 %}
    {% for part in parts %}
        <a class="photoGallery" rel="prettyPhoto[img]" href="{{ part.img }}">
            <img alt="{{ part.name }}" src="{{ part.img_s }}" />
        </a>
    {% endfor %}
    {% endif %}

    {%if pages|length > 1 %}
        <div class="pagination pagination-left">
            <ul>
                {% for page in pages %}
                    {% if page.current == 1 %}
                        <li class="active"><a>{{ page.num }}</a></li>
                    {% else %}
                        <li><a href="{{ page.url }}">{{ page.num }}</a></li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    {% endif %}

{% endblock %}