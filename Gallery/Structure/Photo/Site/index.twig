{% extends "site.twig" %}

{% block content %}

    <h1>{{ header }}</h1>

    {{ template.content|raw }}

    {%if parts|length > 0 %}
    {% for part in parts %}
        <a rel="highslide" target="_blank" href="{{ part.img_big }}">
            <img border="0" style="border: 1px solid #333333;" alt="{{ part.cap }}" src="{{ part.img }}">
        </a>
    {% endfor %}
    {% endif %}

    {%if pages|length > 1 %}
        <div class="pagination pagination-left">
            <ul>
                {% for page in pages %}
                    {% if page.current == 1 %}
                        <li class="active"><a>{{ page.num }}</a></li>
                    {% else %}
                        <li><a href="{{ page.url }}">{{ page.num }}</a></li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    {% endif %}

{% endblock %}