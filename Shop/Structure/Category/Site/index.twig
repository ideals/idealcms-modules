{% extends "site.twig" %}

{% block content %}
    <h1>{{ header }}</h1>

    {{ template.content|raw }}

    {% if goods|length > 0 %}
        {% for good in goods %}
            <div class="catalog_item">
                <div class="catalog_item_inside">
                    <div class="img">
                        <a href="{{ good.link }}" title="{{ good.name }}">
                            <img src="/images/1c/big/{{ good.img }}">
                        </a>
                    </div>
                    <div style="height: 50px">
                        <a href="{{ good.link }}">{{ good.name }}</a>
                    </div>
                    <div class="brand">{{ good.brand }}</div>
                    <div class="price">
                        {{ good.price }} руб
                    </div>
                </div>
            </div>
        {% endfor %}
        <div style="clear: both"></div>

        
    {% endif %}

{% endblock %}